<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:background="@drawable/des_round_side_menu_header_corners">

    <TextView
        android:id="@+id/side_drawer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/nunito_bold"
        android:text="Supreme Hotels"
        android:textColor="@color/black"
        android:textSize="25dp" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_man_travel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/side_drawer_title"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/lottie_travelling_man_white" />

</RelativeLayout>