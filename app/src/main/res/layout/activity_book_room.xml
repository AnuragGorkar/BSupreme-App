<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:elevation="0dp"
    android:orientation="vertical"
    tools:context=".Activities.BookTableActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/tablebookingLottieCard"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        app:cardElevation="0dp"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <TextView
                android:id="@+id/Rbooking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:fontFamily="@font/nunito_bold"
                android:text="Room Bookings"
                android:textAlignment="center"
                android:textSize="20dp" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_man_travel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/Rbooking"
                android:background="@color/white"
                android:elevation="0dp"
                android:padding="10dp"
                android:scaleType="center"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/lf30_editor_5wjlkgmn" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tablebookingLottieCard"
        android:background="@drawable/des_booking_screen_bg">

        <TextView
            android:id="@+id/bookingHotelName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:elevation="5dp"
            android:fontFamily="@font/nunito_semi_bold"
            android:text="Hotel Name"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/bookingHotelName"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/checkInButton"
                    android:layout_width="80dp"

                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/nunito_semi_bold"
                    android:text="Checkin Date"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/checkInText"
                    android:focusable="false"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:paddingVertical="6dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/des_calender_bg"
                    android:fontFamily="@font/nunito_semi_bold"
                    android:text="DD/MM/YYYY"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:orientation="horizontal"

                >

                <TextView
                    android:id="@+id/checkOutButton"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/nunito_semi_bold"
                    android:text="Checkout Date"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/checkOutText"
                    android:focusable="false"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:paddingVertical="6dp"
                    android:background="@drawable/des_calender_bg"
                    android:fontFamily="@font/nunito_semi_bold"
                    android:text="DD/MM/YYYY"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18dp" />


            </LinearLayout>


            <Button
                android:id="@+id/nextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="@drawable/des_booking_screen_bg"
                android:fontFamily="@font/nunito_bold"
                android:paddingHorizontal="40dp"
                android:text="Next"
                android:textColor="@color/white"
                android:textSize="20dp" />


        </LinearLayout>


        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:background="@drawable/des_img_button"
            android:elevation="8dp"
            android:src="@drawable/ic_twotone_cancel"
            android:tint="@color/teal_dark"

            />


    </RelativeLayout>


</RelativeLayout>