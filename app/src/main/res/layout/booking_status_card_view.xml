<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:clickable="false"
    android:orientation="vertical"
    app:cardCornerRadius="13dp"
    app:cardBackgroundColor="@color/white"
    android:id="@+id/booking_status_table_card"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/des_booking_table_card_round"
        android:padding="18dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/s"
                    app:civ_circle_background_color="#FFFFFF" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/b_hotel_name"
                    android:text="Supreme Kerala"
                    android:textSize="26dp"
                    android:fontFamily="@font/nunito_extra_bold"
                    android:textColor="@color/teal_dark"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="10dp">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="5dp">

<!--                    <TextView-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text="Date"-->
<!--                        android:fontFamily="@font/nunito_extra_bold"-->
<!--                        android:textAlignment="center"-->
<!--                        android:textColor="@color/teal_darkest"-->
<!--                        android:paddingHorizontal="8dp"-->
<!--                        android:textSize="17dp"-->
<!--                        >-->

<!--                    </TextView>-->

                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/b_h_date"
                        android:layout_height="wrap_content"
                        android:text="22 December 2020"
                        android:fontFamily="@font/nunito_extra_bold"
                        android:textAlignment="center"
                        android:textColor="@color/teal_darkest"
                        android:paddingHorizontal="8dp"
                        android:textSize="17dp">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="5dp">

<!--                    <TextView-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text="Time"-->
<!--                        android:fontFamily="@font/nunito_extra_bold"-->
<!--                        android:textAlignment="center"-->
<!--                        android:textColor="@color/teal_darkest"-->
<!--                        android:paddingHorizontal="7dp"-->
<!--                        android:textSize="17dp">-->

<!--                    </TextView>-->

                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/b_h_time"
                        android:layout_height="wrap_content"
                        android:text="08:00pm - 09:00pm"
                        android:fontFamily="@font/nunito_extra_bold"
                        android:textAlignment="center"
                        android:textColor="@color/teal_darkest"
                        android:textSize="16dp">

                    </TextView>

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clickable="false"
            android:orientation="vertical"
            android:background="@color/white"
            app:cardBackgroundColor="@color/white"
            android:elevation="0dp"
            app:cardCornerRadius="20dp"
            android:id="@+id/booking_status_table_card2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:elevation="0dp"
                android:orientation="horizontal"
                android:padding="5dp"
                >

                <TextView
                    android:id="@+id/tableSeats"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/nunito_bold"
                    android:gravity="center"
                    android:text="10"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/seatIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_toEndOf="@id/tableSeats"
                    android:layout_centerInParent="true"
                    android:foregroundGravity="center"
                    android:src="@drawable/ic_twotone_seat"
                    />

                <View
                    android:id="@+id/verticalBar"
                    android:layout_width="2dp"
                    android:layout_height="30dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerInParent="true"
                    android:layout_toEndOf="@id/seatIcon"
                    android:background="@color/teal_darkest" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="20dp"
                    android:layout_toEndOf="@+id/verticalBar"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:id="@+id/acIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/detailsVegNonVeg"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:src="@drawable/ic_ac_table"
                            app:tint="@color/teal_darkest" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_extra_bold"
                            android:text="AC"
                            android:textAlignment="center"
                            android:textColor="@color/teal_darkest"
                            android:textSize="13dp"/>


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/barIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/detailsBarNoBar"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="center_horizontal"

                            android:layout_weight="1"
                            android:src="@drawable/ic_near_wine_bar"
                            app:tint="@color/teal_darkest" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_extra_bold"
                            android:text="BAR"
                            android:textAlignment="center"
                            android:textColor="@color/teal_darkest"
                            android:textSize="13dp"/>


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/grillIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/detailsStayNoStay"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:src="@drawable/ic_outdoor_grill"
                            app:tint="@color/teal_darkest" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_extra_bold"
                            android:text="GRILL"
                            android:textAlignment="center"
                            android:textColor="@color/teal_darkest"
                            android:textSize="13dp"/>


                    </LinearLayout>


                </LinearLayout>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</androidx.cardview.widget.CardView>