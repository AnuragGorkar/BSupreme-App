<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:clickable="false"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="13dp"
    android:id="@+id/booking_status_room_card"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/des_booking_table_card_round"
        android:padding="18dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/s"
                    app:civ_circle_background_color="#FFFFFF" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/b_hotel_name"
                    android:text="Supreme Kerala"
                    android:textSize="26dp"
                    android:fontFamily="@font/nunito_extra_bold"
                    android:textColor="@color/teal_dark"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="10dp">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Check In"
                        android:fontFamily="@font/nunito_extra_bold"
                        android:textAlignment="viewStart"
                        android:textColor="@color/teal_darkest"
                        android:paddingHorizontal="5dp"
                        android:textSize="13dp"
                        >

                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/check_in_date2"
                        android:layout_height="wrap_content"
                        android:text="22 December 2020"
                        android:fontFamily="@font/nunito_extra_bold"
                        android:textAlignment="viewStart"
                        android:textColor="@color/teal_darkest"
                        android:paddingHorizontal="8dp"
                        android:textSize="15dp">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Check Out"
                        android:fontFamily="@font/nunito_extra_bold"
                        android:textAlignment="center"
                        android:textColor="@color/teal_darkest"
                        android:paddingHorizontal="5dp"
                        android:textSize="13dp">

                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/check_out_date2"
                        android:layout_height="wrap_content"
                        android:text="24 December 2020"
                        android:fontFamily="@font/nunito_extra_bold"
                        android:textAlignment="center"
                        android:textColor="@color/teal_darkest"
                        android:textSize="15dp">

                    </TextView>

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/table_booking_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clickable="false"
            android:orientation="vertical"
            android:background="@color/white"
            app:cardBackgroundColor="@color/white"
            android:elevation="0dp"
            app:cardCornerRadius="20dp"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:elevation="0dp"
                android:orientation="horizontal"
                android:padding="5dp">




                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/bed"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_twotone_hotel" />

                    <TextView
                        android:id="@+id/roomBedsTextCard2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/nunito_semi_bold"
                        android:gravity="center"
                        android:layout_marginLeft="9dp"
                        android:text="100"
                        android:textSize="18dp" />

                </LinearLayout>


                <View
                    android:id="@+id/verticalBar2"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="5dp"
                    android:background="@color/teal_darkest" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/seatIcon"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_twotone_room_type" />

                    <TextView
                        android:id="@+id/roomTypeTextCard2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="9dp"
                        android:fontFamily="@font/nunito_semi_bold"
                        android:gravity="center"
                        android:text="Super Delux"
                        android:textSize="16dp" />

                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>


</androidx.cardview.widget.CardView>