<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="navigation_drawer_theme">
        <item name="colorPrimary">@color/white</item>
        <item name="colorControlHighlight">@color/teal_dark</item>
    </style>

    <style name="bottom_navigation_bar_theme">
        <item name="colorPrimary">@color/white</item>
        <item name="colorControlHighlight">@color/teal_light</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="collapsing_tool_bar_theme">
        <item name="colorPrimary">@color/white</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="calendar_view_custom" parent="android:Widget.CalendarView">
        <item name="android:focusedMonthDateColor">@color/black</item>
        <item name="android:weekNumberColor">@color/teal_light</item>

    </style>

    <style name="date_picker_view_custom." parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/teal_darkest</item>                   <!--header background-->
        <item name="android:windowBackground">@color/teal_darkest</item>     <!--calendar background-->
        <item name="android:colorControlActivated">@color/teal_light</item> <!--selected day-->
        <item name="android:textColorPrimary">@color/white</item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>


    
</resources>